mkdir ./bin
cp -r ./src/html ./bin/
cp -r ./src/images ./bin/
echo "Compiling DataWarrior source code..."
javac -nowarn -d ./bin -sourcepath ./src:./stubs -classpath "./lib/*" src/com/actelion/research/datawarrior/DataWarriorLinux.java
rm -r bin/chemaxon
cd bin
for JAR in ../lib/*.jar ; do (echo "Unpacking $JAR"; jar -xf "$JAR"); done
rm -f META-INF/*.SF
rm -f META-INF/*.RSA
rm -f META-INF/*.DSA
cd ..
echo "Building fat JAR file..."
jar -cfm datawarrior_all.jar manifest_additions.txt -C ./bin .
rm -r bin
echo "Done."
